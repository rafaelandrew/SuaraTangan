<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <VideoView
        android:id="@+id/videoPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/layout_start_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:gravity="center"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_logo_start"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/img_logo_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_suara_tangan_logo"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di\nSuara Tangan"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_below="@id/card_logo_start"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekan tombol di bawah untuk memulai"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/tv_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_session"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/tv_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/button_gradient_rounded"
            android:text="MULAI PENERJEMAH"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_active_session"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_translation_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="24dp"
            android:background="@drawable/bg_white_rounded"
            android:elevation="6dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Hasil terjemahan akan muncul di sini..."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close_session"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/layout_controls"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="444dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_home"
            app:tint="@android:color/black" />

        <LinearLayout
            android:id="@+id/layout_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_splash_gradient"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/tv_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Klik tombol untuk mulai"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="40dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/btn_main_action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:src="@drawable/icons8_camera_30"
                    app:tint="@android:color/black" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/btn_mode_camera"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:contentDescription="Mode Kamera"
                    android:src="@drawable/icons8_camera_30" />

                <ImageButton
                    android:id="@+id/btn_mode_mic"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:contentDescription="Mode Suara"
                    android:src="@drawable/icons8_microphone_24" />

                <ImageButton
                    android:id="@+id/btn_mode_video"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:contentDescription="Mode Video"
                    android:src="@drawable/icons8_video_24" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>